{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-selector-bem-pattern"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      ignoreAtRules: ['include', 'mixin', 'if', 'function', 'else', 'return', 'content', 'for']
    }],
    "plugin/selector-bem-pattern": {
      "preset": "bem",
      ignoreSelectors: [
        "\\.is-.+$",
        "\\.has-.+$"
      ]
    }
  }
}
